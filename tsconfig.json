{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "hardhat"],
    "skipLibCheck": true
  },
  "include": ["hardhat.config.ts", "scripts/**/*.ts", "test/**/*.ts", "docs/**/*.ts"],
  "exclude": ["node_modules"]
}
